# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

 use_frameworks!

workspace 'Hoof.xcworkspace'

 def shared_pods
    pod 'CoreGPX'
    pod 'RxSwift', '~> 5'
    pod 'RxCocoa', '~> 5'
end

# Common modules
target 'Core' do
  project 'Common/Core/Core'
  shared_pods
end

# Feature modules
target 'Home' do
  project 'Features/Home/Home'
  shared_pods

  target 'HomeTests' do
    inherit! :search_paths
    shared_pods
  end
end

target 'Map' do
  project 'Features/Map/Map'
  shared_pods

  target 'MapTests' do
    inherit! :search_paths
    shared_pods
  end
end

# Apps
target 'Hoof' do
  # Pods for Hoof
  shared_pods
  pod 'MapCache', '~> 0.9.0'

  target 'HoofTests' do
    inherit! :search_paths
    # Pods for testing
    shared_pods
  end

  target 'HoofUITests' do
    # Pods for testing
  end

end

target 'WatchHoof' do
  # Pods for WatchHoof

  target 'WatchHoofTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'WatchHoofUITests' do
    # Pods for testing
  end

end

target 'WatchHoof Extension' do

  # Pods for WatchHoof Extension
  shared_pods

end
